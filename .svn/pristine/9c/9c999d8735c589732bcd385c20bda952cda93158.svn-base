    font-size: 0.34rem;
    border: 1px solid #636BF6;
}


/* vant修改 */

/* 资助对象认定承诺 */
.row_label .van-checkbox__label{
	display: block;
	line-height: 0.5rem !important;
	margin-top: -0.05rem;
}
.row_label .van-checkbox{
	overflow: auto;
}
.row_label .van-checkbox{
	align-items: stretch;
	-webkit-align-items: stretch;
	-webkit-box-align: stretch;
}
/* Login */
.login .van-checkbox__label{
		color: #636BF6;
		margin-left: 5px;
		/* margin-top: 0.07rem; */
}
.login .van-checkbox__icon .van-icon{
	border-color: #636BF6;
	/* width: 0.3rem;
	height: 0.3rem; */
	/* vertical-align: bottom; */
	/* margin-top: 0.03rem; */
	border-radius: 0.05rem;
}
.login .van-checkbox__icon--checked .van-icon{
	border-color: #636BF6;
	background-color: #636BF6;
}
.van-dialog__message{
	font-size: 0.34rem;
	color: #171520;
	font-weight: bold;
}
.login .van-checkbox__icon{
	margin-top: -0.06rem;
}
.login .van-checkbox{
	overflow: auto;
}
.van-dialog__confirm{
	color: #3478F6 !important;
	font-size: .34rem !important;
	font-weight: bold !important;
}

.van-dialog__header{
    font-size: .34rem !important;
    color: #171520 !important;
    font-weight: bold !important;
}
.van-dialog__message--has-title{
    font-size: .3rem !important;
    color: #171520 !important;
    font-weight: normal !important;
}
.van-dialog__cancel{
    color: #FF5757 !important;
    font-size: .34rem !important;
}
